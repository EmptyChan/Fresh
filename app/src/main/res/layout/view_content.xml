<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
    android:background="@color/bigColorContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/diet_plan_inout_background">
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:minHeight="50dp"
            android:hint="@string/diet_plan_hint_text"
            android:lineSpacingExtra="4dp"
            android:inputType="textMultiLine"
            android:textColor="@color/me_background"
            android:scrollbars="vertical"
            android:textColorHint="@color/diet_plan_input_text"
            android:background="@null"/>
    </ScrollView>


</RelativeLayout>