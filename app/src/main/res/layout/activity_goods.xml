    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                >
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                    android:elevation="1dp"
                    />
                <View
                    android:id="@+id/toolbar_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/toolbar_dropshadow" />
                </android.support.design.widget.AppBarLayout>
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pic_height"
                    android:src="@drawable/binguo"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_name"
                        style="@style/title_style"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsName"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="冰菓"-->
                        <!--style="@style/content_style"/>-->
                    <EditText
                        android:id="@+id/goodsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:text="冰菓"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_type"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="图书图像类"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsType"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="图书图像类"-->
                        <!--android:textSize="@dimen/content_size"-->
                        <!--style="@style/content_style"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_manufacturer"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsManufacturer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="角川书店"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsManufacturer"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="角川书店"-->
                        <!--android:textSize="@dimen/content_size"-->
                        <!--style="@style/content_style"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_price"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¥100.0"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsPrice"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="¥100.0"-->
                        <!--android:textSize="@dimen/content_size"-->
                        <!--style="@style/content_style"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_production_date"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsProductionDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2015-06-09"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsProductionDate"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="2015-06-09"-->
                        <!--style="@style/content_style"-->
                        <!--android:textSize="@dimen/content_size"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_durability_period"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsDurabilityPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="十年"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsDurabilityPeriod"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="十年"-->
                        <!--style="@style/content_style"-->
                        <!--android:textSize="@dimen/content_size"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/liner_layout_margin_style">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/goods_manual_period"
                        style="@style/title_style"/>
                    <EditText
                        android:id="@+id/goodsManualPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="两年"
                        style="@style/content_style"
                        android:textColor="@color/colorLaucher"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:background="@drawable/edit_shape"/>
                    <!--<TextView-->
                        <!--android:id="@+id/goodsManualPeriod"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="两年"-->
                        <!--style="@style/content_style"-->
                        <!--android:textSize="@dimen/content_size"/>-->
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:minHeight="@dimen/actionBarMargin"
                        android:src="@mipmap/ic_done_white_24dp"/>
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorAccent"
                        android:minHeight="@dimen/actionBarMargin"
                        android:src="@mipmap/ic_clear_white_24dp"/>
                </LinearLayout>
        </LinearLayout>
            </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>
</FrameLayout>
