<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.activity.GoodsActivity"
    android:background="@color/bigColorContent"
    android:orientation="vertical">
    <com.github.rahatarmanahmed.cpv.CircularProgressView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/goods_progress_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cpv_animAutostart="false"
        app:cpv_indeterminate="true"
        app:cpv_thickness="6dp"
        app:cpv_color="@color/bigColorContent"
        android:layout_centerInParent="true"/>
    <android.support.v7.widget.Toolbar
        android:id="@+id/goods_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        >
        <TextView
            android:id="@+id/goods_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </android.support.v7.widget.Toolbar>
    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@id/goods_toolbar">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

                <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:paddingBottom="@dimen/activity_vertical_margin"
                   android:paddingLeft="@dimen/activity_horizontal_margin"
                   android:paddingRight="@dimen/activity_horizontal_margin">
                   <ImageView
                       android:id="@+id/goods_picture"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:src="@mipmap/plan_img"
                       android:scaleType="fitCenter"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/liner_layout_margin_style"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/goods_barcode"
                            style="@style/title_style"/>
                        <TextView
                            android:id="@+id/barcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            style="@style/content_style"
                            android:textColor="@color/goods_background"
                            android:background="@color/me_background"/>
                    </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_name"
                           style="@style/title_style"/>
                       <EditText
                           android:id="@+id/goodsName"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_type"
                           style="@style/title_style"/>
                       <!--<EditText-->
                           <!--android:id="@+id/goodsType"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="图书图像类"-->
                           <!--style="@style/content_style"-->
                           <!--android:textColor="@color/colorLaucher"-->
                           <!--android:textCursorDrawable="@drawable/color_cursor"-->
                           <!--android:background="@drawable/edit_shape"/>-->
                       <Spinner
                           android:id="@+id/goodsType"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:background="@color/me_background">
                       </Spinner>
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_manufacturer"
                           style="@style/title_style"/>
                       <EditText
                           android:id="@+id/goodsManufacturer"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                       <!--<TextView-->
                           <!--android:id="@+id/goodsManufacturer"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="角川书店"-->
                           <!--android:textSize="@dimen/content_size"-->
                           <!--style="@style/content_style"/>-->
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_price"
                           style="@style/title_style"/>
                       <EditText
                           android:id="@+id/goodsPrice"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="¥100.0"
                           android:textColorHint="@color/cook_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                       <!--<TextView-->
                           <!--android:id="@+id/goodsPrice"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="¥100.0"-->
                           <!--android:textSize="@dimen/content_size"-->
                           <!--style="@style/content_style"/>-->
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_production_date"
                           style="@style/title_style"/>
                       <TextView
                           android:id="@+id/goodsProductionDate"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="2012-06-09"
                           android:maxLength="10"
                           android:textColorHint="@color/cook_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:clickable="true"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                       <!--<TextView-->
                           <!--android:id="@+id/goodsProductionDate"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="2015-06-09"-->
                           <!--style="@style/content_style"-->
                           <!--android:textSize="@dimen/content_size"/>-->
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_durability_period"
                           style="@style/title_style"/>
                       <EditText
                           android:id="@+id/goodsDurabilityPeriod"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="180天"
                           android:textColorHint="@color/cook_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                       <!--<TextView-->
                           <!--android:id="@+id/goodsDurabilityPeriod"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="十年"-->
                           <!--style="@style/content_style"-->
                           <!--android:textSize="@dimen/content_size"/>-->
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       style="@style/liner_layout_margin_style">
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:text="@string/goods_manual_period"
                           style="@style/title_style"/>
                       <EditText
                           android:id="@+id/goodsManualPeriod"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:hint="30天"
                           android:textColorHint="@color/cook_content"
                           android:paddingTop="4dp"
                           android:paddingBottom="4dp"
                           style="@style/content_style"
                           android:textColor="@color/goods_background"
                           android:textCursorDrawable="@drawable/color_cursor"
                           android:background="@color/me_background"/>
                       <!--<TextView-->
                           <!--android:id="@+id/goodsManualPeriod"-->
                           <!--android:layout_width="match_parent"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="两年"-->
                           <!--style="@style/content_style"-->
                           <!--android:textSize="@dimen/content_size"/>-->
                       </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:paddingBottom="40dp"
                       android:paddingTop="10dp">
                       <ImageButton
                           android:id="@+id/btn_confirm"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:layout_marginEnd="10dp"
                           android:background="@drawable/button_round"
                           android:minHeight="35dp"
                           android:src="@mipmap/ic_done_gray_24dp"/>
                       <ImageButton
                           android:id="@+id/btn_cancel"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                           android:layout_weight="1"
                           android:background="@drawable/button_round"
                           android:minHeight="35dp"
                           android:src="@mipmap/ic_clear_gray_24dp"/>
                   </LinearLayout>
           </LinearLayout>
            </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

</RelativeLayout>
