<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bigColorContent</item>
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="title_style">
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="content_style">
        <item name="android:textColor">#FFFFFF</item>s
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="liner_layout_margin_style">
        <item name="android:layout_marginBottom">12dp</item>
    </style>


    <style name="rg_btn_style">
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--android:text="@string/goods_btn"-->
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
    </style>

    <style name="me_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
    </style>
</resources>
